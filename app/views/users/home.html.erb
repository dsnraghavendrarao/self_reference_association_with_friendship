

<%@users.each do |user|%>
<% if current_user != user %>
	<p><%=user.email%>(<%=link_to "send_request",add_friendship_path(:friend_id => user.id )%>)</p>
<%end%>
<%end%>


<% if current_user.present? %>
<h1>Friends List  </h1>
<%current_user.friends.each do |friendships| %>
<p><%= friendships.email %></p>
<%end%>

<h1> I got request</h1>
<%current_user.got_request_friendships.each do |friendships|%>
<p><%= friendships.user.email%></p>(<%= link_to "accept",accept_friendship_path(:friendship => friendships)%>)
<%end%>
<h1>I send request</h1>
<%current_user.requested_friendships.each do |friendships|%>
<p><%= friendships.friend.email%></p>
<%end%>
<%end%>